{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: docling translate",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/translate_markdown.py",
            "console": "integratedTerminal",
            "args": [
                "content/colpali.pdf",
                "--model", "granite3.2:8b",
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true
        },
    ]
}
